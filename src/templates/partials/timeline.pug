mixin entryItem(key, entrySide, timeSide, data)
  - var cls = 'entry--' + entrySide + ' bg--' + (data.type.toLowerCase().replace(' ', '-') || '') + ' track--' +data.track
  - var modalClass = 'modalTrack-' + key
  li.entry(class='' +cls)
    .time(class='time--'+timeSide) #{data.time}
    .entry__content.wow.animated.fadeIn(data-wow-duration='1s', data-wow-delay='0.5s')
      h2.title #{data.title}
      if data.abstract
        .abstract
          .ellipsis
            | #{data.abstract.substr(0,120)}...
            a.abstract-modal(href='javascript://')(data-key= key, data-toggle="modal") read more

        .modal-content.hidden(id='modal'+key)
          .modalContent(class= 'modal-track--' +data.track)
            .modal-header
              h2.modal-title #{data.title}
            .modal-body
              .row
                .col-md-4.col-sm-5.col-xs-12
                  .avatar
                    img(src= data.presenter.avatarUrl)
                .col-md-8.col-sm-7.col-xs-12
                  h3 #{data.presenter.name}
                  h3
                    em #{data.presenter.role},
                    span #{data.presenter.company}
                  .social
                    if data.presenter.twitter
                      a.icon.icon-twitter(href='https://www.twitter.com/'+data.presenter.twitter, target='_blank')
                        span @#{data.presenter.twitter}
                    if data.presenter.fb
                      a.icon.icon-fb(href= data.presenter.fb, target='_blank')
                        span Facebook
                    if data.presenter.linkedin
                      a.icon.icon-linkedin(href= data.presenter.linkedin, target='_blank')
                        span LinkedIn
                    if data.presenter.web
                      a.icon.icon-web(href= data.presenter.web, target='_blank')
                        span Web

                  h4 Time: #{data.time}
                  h5 Track #{data.track}
              br
              h5.glimpse A brief glimpse of talk
              p #{data.abstract}

    //- if data.type.toLowerCase() != 'break' && data.abstract
    //-   .track-info #{trackNames[parseInt(data.track, 10)]}

